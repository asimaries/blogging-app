<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('./partials/head') %>
		<title>Sign Up</title>
</head>

<body>
	<%- include('./partials/nav') %>
	<% if (locals.error) { %>
		<div class="m-5">
			<div class="alert alert-danger" role="alert">
				<%= locals.error %>
			</div>
		</div>
		<% } %>
	<div class="m-5">
	<form action="/auth/signup" method="post" enctype="multipart/form-data">
		<div class="form-group">
			<label for="fullName">Full Name: </label>
			<input type="text" class="form-control" name="fullName" aria-describedby="fullName"
				placeholder="ex. Hanzala Ansari">
		</div>
		<div class="form-group">
			<label for="email">Email address</label>
			<input type="email" class="form-control" name="email" aria-describedby="emailHelp"
				placeholder="example@example.com">
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input type="password" class="form-control" name="password" placeholder="Password">
		</div>
		<div class="form-group">
			<label for="avatar">Add Avatar: </label>
			<input type="file" class="form-control-file" name="profileImageURL"/>
		</div>
		<button type="submit" class="btn btn-primary mt-1">Submit</button>

	</form>
</div>
	<%- include('./partials/script') %>
</body>

</html>