<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('./partials/head') %>
		<title>New Blog</title>
</head>

<body>

	<%- include('./partials/nav') %>
		<div class="container mt-3">
			<form action="/blog/new-blog" method="post" enctype="multipart/form-data">
				<div class="mt-3">
					<label for="title" class="form-label">Title</label>
					<input type="text" class="form-control" id="title" name="title" aria-describedby="title"
						placeholder="Title" />
				</div>
				<div class="mt-3">
					<label for="body" class="form-label">Body</label>
					<textarea class="form-control" name="body" aria-describedby="body"
						placeholder="Write your blog here ..."></textarea>
				</div>
				
				<div class="mt-3">
					<label class="form-label" for="coverImage">Cover Image</label>
					<input type="file" class="form-control" name="coverImage" aria-describedby="coverImage" />
				</div>
				<div class="mt-3">
					<button type="submit" class="btn btn-primary">Post Blog</button>
				</div>
			</form>
		</div>
		<%- include('./partials/script') %>
</body>

</html>