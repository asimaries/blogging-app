<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('./partials/head') %>
		<title>Home Page</title>
</head>

<body>

	<%- include('./partials/nav') %>
		<!-- <pre><%= JSON.stringify(locals, null, 4) %></pre> -->
		<div class="container mt-3 row row-cols-4">
			<% blogs.forEach(blog=> { %>
				<div class="col">
					<div class="card" style="width: 18rem;">
						<% if (blog?.coverImageURL) { %>

							<img class="card-img-top"
								src=<%=`/static/uploads/${blog.createdBy._id}/${blog.coverImageURL}` %>
							alt="Card image cap">
							<% } %>
								<div class="card-body">
									<h5 class="card-title">
										<%= blog.title %>
									</h5>
									<p class="">Blog by <%= blog.createdBy.fullName %>
									</p>
									<a href=<%- `/blog/${blog._id}` %> class="btn btn-primary">View</a>
								</div>
					</div>
				</div>
				<% }) %>
		</div>
		<%- include('./partials/script') %>
</body>

</html>